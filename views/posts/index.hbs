
<h1>Timeline</h1>
<ul class="posts" >
{{#each posts}}
<div class="card">
  <div class="post-user">
   <li><small style= "font-size:0.7em">{{this.user.email}}</small></li>
  </div>
  <div class="post-date" style = "position:relative; left:62.5%;";>
    <li><small style= "font-size:0.7em"> {{formatDate this.createdAt}} </small></li>
  </div>
  <div class="post-message">
    <li>{{this.message}}</li>
  </div>

  <br>
  {{#if (ifEqual ../user.email this.user.email)}} 
    <button type="submit" value="Delete">Delete</button>
  {{else}}
    <button type="submit" value="Like">Like</button>
  {{/if}}
</div>
{{/each}}

</ul>

<a class="new-post-link" href="/posts/new">New post</a>

<form action='/sessions?_method=DELETE' method='POST'>
  <button type="submit" value="Log Out">Log out</button>
</form>
